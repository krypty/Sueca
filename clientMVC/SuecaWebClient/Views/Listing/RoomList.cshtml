@model IEnumerable<SuecaWebClient.Models.RoomListViewModel>

@{
    ViewBag.Title = "Liste des chambres";
}

<h2>Liste des chambres</h2>


    @using (Html.BeginForm("Join", "Room", FormMethod.Get, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
    <div class="row">
        
            @if (Model.Count() > 0)
            {
                <div class="col-md-4">
                    <select size="@Model.Count() " name="roomId" class="form-control">
                        @foreach (var item in Model)
                        {
                            <option>@item.roomId</option>
                        }
                    </select>
                    
                        <input type="submit" value="Rejoindre la chambre" class="btn btn-default" />
                    </div>
            }
            else
            {
                <div class="col-md-4">
                    <div>Aucune room disponible pour le moment</div>
                    
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Créer une chambre", "CreateRoom", null, new { @class = "btn btn-default" })
                </div>
        }
    </div>
    }



    